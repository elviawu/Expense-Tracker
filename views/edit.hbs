<div class="d-flex flex-column align-items-center">
  <h3 class="mt-3">編輯支出</h3>
  <div class="my-3" style="width: 80%">
    <form action="/records/{{ record._id }}?_method=PUT" method="POST">
      <div class="mb-3 d-flex">
        <label for="amount" class="input-group-text">金額</label>
        <input type="number" id="amount" name="amount" class="form-control" min="1" value="{{record.amount}}" required>
      </div>
      <div class="mb-3 d-flex">
        <label for="name" class="input-group-text">名稱</label>
        <input type="text" id="name" name="name" class="form-control" value="{{ record.name }}" required>
      </div>
      <div class="mb-3 d-flex">
        <label for="date" class="input-group-text">日期</label>
        <input type="date" name="date" class="form-control" id="date" min="1900-01-01" max="2100-12-31"
          value="{{ record.date }}" required>
      </div>
      <div class="input-group mb-3 d-flex">
        <label for="category" class="input-group-text">類別</label>
        <select name="categoryId" id="category" class="form-select" required>
          <option selected disabled hidden>{{record.categoryId.name}}</option>
          {{#each categories}}
          <option value="{{this._id}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="btn-control d-flex just-content-evenly">
        <button type="submit" class="btn btn-outline-primary mx-auto mt-3" style="width: 14rem;">儲存</button>
        <a class="btn btn-outline-secondary mx-auto mt-3" style="width: 14rem" href="/">返回首頁</a>
      </div>
    </form>
  </div>
</div>