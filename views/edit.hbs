<div class="d-flex flex-column align-items-center">
  <h3 class="mt-3">Edit Expenses</h3>
  <div class="my-3" style="width: 80%">
    <form action="/records/{{ record._id }}?_method=PUT" method="POST">
      <div class="mb-3 d-flex">
        <label for="amount" class="input-group-text" style="border: none">Amount</label>
        <input type="number" id="amount" name="amount" class="form-control" min="1" value="{{record.amount}}" required>
      </div>
      <div class="mb-3 d-flex">
        <label for="name" class="input-group-text">Name</label>
        <input type="text" id="name" name="name" class="form-control" value="{{ record.name }}" required>
      </div>
      <div class="mb-3 d-flex">
        <label for="date" class="input-group-text">Date</label>
        <input type="date" name="date" class="form-control" id="date" min="1900-01-01" max="2100-12-31"
          value="{{ record.date }}" placeholder="YYYY-MM-DD" required>
      </div>
      <div class="mb-3 d-flex">
        <label for="category" class="input-group-text">Category</label>
        <select name="categoryId" id="category" required>
          <option selected disabled hidden>{{record.categoryId.name}}</option>
          {{#each categories}}
          <option value="{{this._id}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="btn-control d-flex just-content-evenly">
        <button type="submit" class="btn btn-success mx-auto mt-3" style="width: 14rem;">Save</button>
        <a class="btn btn-dark mx-auto mt-3" style="width: 14rem" href="/">Back</a>
      </div>
    </form>
  </div>
</div>