<div class="card mx-auto mt-5" style="width: 80%; border:none;">
  <div class="card-body">
    <div class="row mb-3">
      <select class="form-select" aria-label="Default select example">
        <option selected>類別</option>
        <option value="1">餐飲食品</option>
        <option value="2">交通出行</option>
        <option value="3">休閒娛樂</option>
        <option value="4">家居物業</option>
        <option value="5">其他</option>
      </select>
    </div>
    <div class="mb-3">
      <span>總花費：</span>
      <span>${{ totalAmount }}</span>
    </div>
    <div class="mb-3">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">類別</th>
            <th scope="col">名稱</th>
            <th scope="col">日期</th>
            <th scope="col">金額</th>
            <th scope="col">編輯</th>
            <th scope="col">刪除</th>
          </tr>
        </thead>
        <tbody>
          {{#each records}}
            <tr>
              <td class="record-icon"><i class="{{this.categoryIcon}}"></i></td>
              <td>{{ this.name }}</td>
              <td>{{ this.date }}</td>
              <td>{{ this.amount }}</td>
              <td><a href="/records/edit" class="text-secondary"><i class="fa-solid fa-pen-to-square"></i></a></td>
              <td>
                <form action="/" method="POST" style="display: inline;">
                  <button type="submit" class="delete-icon" style="border: none; background: transparent">
                    <i class="fa-solid fa-trash-can"></i>
                  </button>
                  </button>
                </form>
              </td>
            </tr>
          {{/each}}
          
