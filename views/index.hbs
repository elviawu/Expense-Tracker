<div class="card mx-auto mt-5" style="width: 80%; border:none;">
  <div class="card-body">
    <div class="row mb-3">
      <select class="form-select" aria-label="Default select example">
        <option selected disabled>類別</option>
        <option value="all">全部</option>
        {{#each categories}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="mb-3">
      <span>總花費：</span>
      <span>${{ totalAmount }}</span>
    </div>
    <div class="mb-3">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">類別</th>
            <th scope="col">名稱</th>
            <th scope="col">日期</th>
            <th scope="col">金額</th>
            <th scope="col">編輯</th>
            <th scope="col">刪除</th>
          </tr>
        </thead>
        <tbody>
          {{#each records}}
            <tr>
              <td class="record-icon"><i class="{{this.categoryId.icon}}"></i></td>
              <td>{{ this.name }}</td>
              <td>{{ this.date }}</td>
              <td>{{ this.amount }}</td>
              <td><a href="/records/{{ this._id }}/edit" class="text-secondary"><i class="fa-solid fa-pen-to-square"></i></a></td>
              <td>
                <form action="/records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                  <button type="submit" class="delete-icon" style="border: none; background: transparent">
                    <i class="fa-solid fa-trash-can"></i>
                  </button>
                  </button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="d-flex justify-content-center">
      <a href="/records/new" class="btn btn-outline-primary">新增支出</a>
    </div>
  </div>
</div>